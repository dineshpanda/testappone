<div class="card mb-3">
  <h2 class="card-header h4">
    Address #<%= address.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>User</dt>
      <!-- Display user_id start -->
      <dd><%= address.user_id %></dd>
      <!-- Display user_id end -->

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back address, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <!-- Edit link address start -->
      <div class="col">
        <% if current_user == @address.user %>
          <%= link_to edit_address_url(address), class: "btn btn-block btn-sm btn-outline-secondary" do %>
            <i class="fas fa-edit"></i>
          <% end %>
        <% end %>
      </div>
      <!-- Edit link address end -->

      <!-- Delete link address start -->
      <div class="col">
        <% if current_user == @address.user %>
          <%= link_to address, method: :delete, data: { confirm: "Do you really want to delete this address?" }, class: "btn btn-block btn-outline-secondary" do %>
            <i class="fas fa-trash-alt"></i>
          <% end %>
        <% end %>
      </div>
      <!-- Delete link address end -->
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(address.updated_at) %> ago
  </div>
</div>
