<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Addresses

    <a data-toggle="collapse" href="#user_addresses_new_form">
      Add address
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @user.addresses.each do |address| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to address.user_id, address_path(address) %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="user_addresses_new_form">
        <%= render partial: "users/user_addresses_new_form" %>
      </div>
    </div>

  </ul>
</div>
